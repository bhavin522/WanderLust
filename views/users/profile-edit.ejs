<%- layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h2 class="card-title mb-0" style="color: #ff6f61;">Edit Your Profile</h2>
                    </div>
                    <div class="card-body profile-section">
                        <form action="/user/profile?_method=PUT" method="POST" class="needs-validation" novalidate>
                            <div class="row">
                                <div class="col-md-4 text-center mb-4">
                                    <img src="<%= currentUser.avatar %>" alt="Profile Picture"
                                        class="rounded-circle img-fluid mb-3 profile-avatar">
                                    <div class="mb-3 form-group">
                                        <label for="avatar" class="form-label">Profile Picture URL</label>
                                        <input type="url" class="form-control input-field" id="avatar" name="avatar"
                                            value="<%= currentUser.avatar %>">
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <h5 class="section-title">Personal Information</h5>

                                    <div class="mb-3 form-group">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" class="form-control input-field" id="username"
                                            value="<%= currentUser.username %>" disabled>
                                        <div class="form-text">Username cannot be changed.</div>
                                    </div>

                                    <div class="mb-3 form-group">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control input-field" id="email"
                                            value="<%= currentUser.email %>" disabled>
                                        <div class="form-text">Email cannot be changed.</div>
                                    </div>

                                    <div class="mb-3 form-group">
                                        <label for="bio" class="form-label">Bio</label>
                                        <textarea class="form-control input-field" id="bio" name="bio"
                                            rows="3"><%= currentUser.bio %></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3 form-group">
                                            <label for="phoneNumber" class="form-label">Phone Number</label>
                                            <input type="tel" class="form-control input-field" id="phoneNumber"
                                                name="phoneNumber" value="<%= currentUser.phoneNumber || '' %>">
                                        </div>

                                        <div class="col-md-6 mb-3 form-group">
                                            <label for="location" class="form-label">Location</label>
                                            <input type="text" class="form-control input-field" id="location"
                                                name="location" value="<%= currentUser.location || '' %>">
                                        </div>
                                    </div>

                                    <h5 class="section-title mt-4">Preferences</h5>

                                    <div class="row">
                                        <div class="col-md-6 mb-3 form-group">
                                            <label for="currency" class="form-label">Currency</label>
                                            <select class="form-select input-field" id="currency"
                                                name="preferences[currency]">
                                                <option value="INR" <%=currentUser.preferences.currency==='INR'
                                                    ? 'selected' : '' %>>Indian Rupee (₹)</option>
                                                <option value="USD" <%=currentUser.preferences.currency==='USD'
                                                    ? 'selected' : '' %>>US Dollar ($)</option>
                                                <option value="EUR" <%=currentUser.preferences.currency==='EUR'
                                                    ? 'selected' : '' %>>Euro (€)</option>
                                                <option value="GBP" <%=currentUser.preferences.currency==='GBP'
                                                    ? 'selected' : '' %>>British Pound (£)</option>
                                            </select>
                                        </div>

                                        <div class="col-md-6 mb-3 form-group">
                                            <label for="language" class="form-label">Language</label>
                                            <select class="form-select input-field" id="language"
                                                name="preferences[language]">
                                                <option value="English" <%=currentUser.preferences.language==='English'
                                                    ? 'selected' : '' %>>English</option>
                                                <option value="Hindi" <%=currentUser.preferences.language==='Hindi'
                                                    ? 'selected' : '' %>>Hindi</option>
                                                <option value="Spanish" <%=currentUser.preferences.language==='Spanish'
                                                    ? 'selected' : '' %>>Spanish</option>
                                                <option value="French" <%=currentUser.preferences.language==='French'
                                                    ? 'selected' : '' %>>French</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3 form-check notification-checkbox">
                                        <input type="checkbox" class="form-check-input" id="notifications"
                                            name="preferences[notifications]" <%=currentUser.preferences.notifications
                                            ? 'checked' : '' %>>
                                        <label class="form-check-label" for="notifications">Receive email
                                            notifications</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4 button-group">
                                <a href="/user/profile" class="btn btn-outline-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary"
                                    style="background-color: #ff6f61; border: none;">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>